<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pytorch.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"></activity>

        <activity android:name=".MainActivity"></activity>

        <activity android:name=".vision.VisionListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>

        <activity android:name=".nlp.NLPListActivity"></activity>

        <activity
            android:name=".vision.ImageClassificationActivity"
            android:label="@string/image_classification_title"></activity>

        <activity
            android:name=".vision.HandmeshActivity"
            android:label="@string/vision_card_handmesh_title"></activity>

        <activity android:name=".nlp.TextClassificationActivity"></activity>

    </application>

    <uses-permission android:name="android.permission.CAMERA" />

</manifest>